<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/review_foto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        android:layout_alignLeft="@+id/text_review"/>
    <TextView
        android:id="@+id/review_username"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_toRightOf="@+id/review_foto"
        android:layout_marginLeft="12dp"
        android:text="Devvvvv"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/review_desc"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Toko yang direkomendasikan benar-benar dekat rumah . Sangat membantu. Trm kasiihhhâ€¦."
        android:textSize="12sp"
        android:layout_alignRight="@+id/text_deskripsi2"
        android:layout_toRightOf="@+id/review_foto"
        android:layout_below="@+id/review_username"
        android:layout_marginLeft="12dp"
        android:textColor="@android:color/black"/>

</RelativeLayout>
