        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/llCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/category_hias"
                        android:layout_width="113dp"
                        android:layout_height="160dp"
                        android:layout_marginHorizontal="24dp"
                        android:background="@drawable/shadow"
                        android:elevation="8dp">
                        <ImageView
                            android:id="@+id/icon_chias"
                            android:layout_centerHorizontal="true"
                            android:layout_width="80dp"
                            android:layout_height="74dp"
                            android:src="@drawable/icon_chias"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icon_chias"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorPrimary"
                            android:text="Tanaman
                                          Hias"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/category_sayur"
                        android:layout_width="113dp"
                        android:layout_height="160dp"
                        android:layout_marginHorizontal="24dp"
                        android:background="@drawable/shadow"
                        android:elevation="8dp">
                        <ImageView
                            android:id="@+id/icon_csayur"
                            android:layout_centerHorizontal="true"
                            android:layout_width="80dp"
                            android:layout_height="74dp"
                            android:src="@drawable/icon_csayur"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icon_csayur"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorPrimary"
                            android:text="Tanaman
                                          Sayur"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/category_buah"
                        android:layout_width="113dp"
                        android:layout_height="160dp"
                        android:layout_marginHorizontal="24dp"
                        android:background="@drawable/shadow"
                        android:elevation="8dp">
                        <ImageView
                            android:id="@+id/icon_cbuah"
                            android:layout_centerHorizontal="true"
                            android:layout_width="80dp"
                            android:layout_height="74dp"
                            android:src="@drawable/icon_cbuah"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icon_cbuah"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorPrimary"
                            android:text="Tanaman
                                          Buah"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/category_obat"
                        android:layout_width="113dp"
                        android:layout_height="160dp"
                        android:layout_marginHorizontal="24dp"
                        android:background="@drawable/shadow"
                        android:elevation="8dp">
                        <ImageView
                            android:id="@+id/icon_cobat"
                            android:layout_centerHorizontal="true"
                            android:layout_width="80dp"
                            android:layout_height="74dp"
                            android:src="@drawable/icon_cobat"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icon_cobat"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="20dp"
                            android:background="@color/colorPrimary"
                            android:text="Tanaman
                                          Obat"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>